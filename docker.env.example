# Docker Environment Configuration for MarkUI
# Copy this file to .env and configure your settings

# LLM Service API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI Settings
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=https://api.openai.com/v1

# Claude Settings
CLAUDE_MODEL_NAME=claude-3-sonnet-20240229

# Ollama Settings (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Google Vertex AI Settings
VERTEX_PROJECT_ID=your_gcp_project_id

# Security Settings
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Marker Library Settings
TORCH_DEVICE=auto  # auto, cpu, cuda, mps

# PDF Storage Management
MAX_STORED_PDFS=50
MAX_STORAGE_SIZE_MB=5000
MIN_RETENTION_HOURS=24
CLEANUP_BATCH_SIZE=10
STORAGE_CHECK_INTERVAL_MINUTES=30 